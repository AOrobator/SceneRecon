<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orobator.android.scenerecon">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.orobator.android.scenerecon.view.activities.SensorTestActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.orobator.android.scenerecon.view.activities.SceneReconCameraActivity"
            android:label="@string/title_activity_scene_recon_camera"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.orobator.android.scenerecon.view.activities.SetupActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.orobator.android.scenerecon.view.activities.HelloOpenCvActivity"
            android:label="@string/title_activity_hello_open_cv"
            android:screenOrientation="landscape" />
    </application>

</manifest>
