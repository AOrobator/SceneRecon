<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              tools:context="com.orobator.android.scenerecon.view.activities.SensorTestActivity$PlaceholderFragment">

    <TextView
            android:id="@+id/xAxisGravity_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/x_axis_gravity"/>

    <TextView
            android:id="@+id/yAxisGravity_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/y_axis_gravity"/>

    <TextView
            android:id="@+id/zAxisGravity_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/z_axis_gravity"/>

</LinearLayout>
