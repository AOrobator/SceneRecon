<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.orobator.android.scenerecon.SensorTestActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/sensorList_textView"
        android:text="@string/sensor_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/world_axis_title"/>

    <TextView
            android:id="@+id/world_xAxisRotation_textView"
            android:text="@string/x_axis_rotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/world_yAxisRotation_textView"
            android:text="@string/y_axis_rotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/world_zAxisRotation_textView"
            android:text="@string/z_axis_rotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_axis_title"/>

    <TextView
            android:id="@+id/phone_xAxisRotation_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/x_axis_rotation"/>

    <TextView
            android:id="@+id/phone_yAxisRotation_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/y_axis_rotation"/>

    <TextView
            android:id="@+id/phone_zAxisRotation_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/z_axis_rotation"/>

</LinearLayout>
