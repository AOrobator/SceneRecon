<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"              android:orientation="vertical"              android:layout_width="match_parent"              android:layout_height="match_parent">    <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="160dp"            android:orientation="horizontal"            android:layout_marginRight="16dp">        <TextView                android:paddingLeft="16dp"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="Scene Name: "                android:layout_weight="0"                android:textSize="20sp"/>        <EditText                android:id="@+id/scene_name_EditText"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_weight="1"                android:paddingRight="16dp"/>    </LinearLayout>    <Button            android:layout_marginTop="30dp"            android:layout_gravity="center_horizontal"            android:id="@+id/capture_scene_Button"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Capture Scene"/></LinearLayout>